<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_margin="4dp"
  android:layout_height="70dp" 
  android:background="@drawable/f_bg">
  
  <ImageView 
	 android:id="@+id/rs_img"
	 android:layout_width="50dp"
	 android:layout_height="50dp"
	 android:layout_marginLeft="4dp"	 
	 android:layout_gravity="center_vertical"
	 android:scaleType="centerCrop"
	 android:src="@drawable/app_icon"/>
  
  <!-- Center linerlayout: get current demension and set width by percentage -->
  <LinearLayout  
  android:orientation="vertical"
  android:layout_width="180dp"
  android:layout_height="fill_parent">
  
  <TextView 
  			android:id="@+id/rs_name"
  			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="#00B8F5"
			android:textStyle="bold"
			android:textSize="12dp"
			android:layout_marginTop="4dp"
			android:layout_marginLeft="4dp"
			android:maxLines="2"			
			android:text="Ngân hàng Đông Á"/>
			
  <TextView 
  			android:id="@+id/rs_address"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  			android:layout_marginLeft="4dp"
  			android:textColor="#ffffff"
  			android:textSize="10dp"
  			android:text="123 Hàm Nghi, P3, Q1, HCM"/>
  	
      
  </LinearLayout>
  
  	<LinearLayout
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			>
  			
  			<TextView
  			android:id="@+id/rs_distance" 
  			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:textColor="#00B8F5"
			android:textStyle="bold"
			android:gravity="center"						
			android:layout_marginTop="4dp"
			android:textSize="15dp"			
			android:text="12 Km"/>
  			
  			</LinearLayout>
  		
</LinearLayout>
