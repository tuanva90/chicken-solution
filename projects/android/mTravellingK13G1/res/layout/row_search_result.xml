<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@android:color/transparent"
	android:layout_width="fill_parent" android:layout_height="?android:attr/listPreferredItemHeight"
	android:layout_marginTop="65dp" android:padding="3dp">

	<!-- Row address -->
	<TextView android:id="@+id/txtViewAddress"
		android:layout_width="185dp" android:layout_height="28dp"
		android:layout_marginLeft="30dp" android:layout_alignParentBottom="true"
		android:ellipsize="marquee" android:maxLines="2"
		android:text="Simple application that shows how to use RelativeLayout1111111111111111"
		android:textSize="12sp" android:textColor="#03b2f3" />

	<!-- Row name -->
	<TextView android:id="@+id/txtViewName" android:layout_width="200dp"
		android:layout_height="28dp" android:layout_alignParentTop="true"
		android:layout_above="@id/txtViewAddress" android:layout_marginLeft="15dp"
		android:layout_alignWithParentIfMissing="true" android:singleLine="true"
		android:gravity="center_vertical"
		android:text="Ngan Hang Sacombank11111111111111111111111111111111111"
		android:textColor="#ffffff" android:textSize="13sp" android:textStyle="bold" />

	<!-- Arrow -->
	<ImageView android:id="@+id/icArrow" android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:layout_marginRight="16dp"
		android:layout_alignParentTop="true" android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true" android:src="@drawable/next_18x18" />

	<!-- Distance -->
	<TextView android:id="@+id/txtViewDistance"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:layout_toLeftOf="@id/icArrow" android:layout_marginRight="6dp"
		android:layout_alignParentBottom="true" android:layout_alignParentTop="true"
		android:singleLine="true" android:gravity="center_vertical"
		android:textSize="12sp" android:layout_marginLeft="15dp" android:text="1000 km"
		android:textColor="#d2a1ac" android:textStyle="bold" />
</RelativeLayout>



		
