		android:text="Ngan Hang Sacombank11111111111111111111111111111111111"
		android:textColor="#ffffff" android:textSize="12sp" android:textStyle="bold" />

	<CheckBox android:id="@+android:id/checkboxItem"
		android:layout_marginRight="25dp" android:layout_width="20dp"
		android:layout_height="fill_parent" android:focusable="false"
		android:layout_alignParentRight="true" android:gravity="center_vertical"
		android:button="@drawable/checkbox_selector" />

