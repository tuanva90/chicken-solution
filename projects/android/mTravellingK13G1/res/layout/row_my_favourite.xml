		android:layout_alignParentBottom="true" android:layout_marginLeft="30dp"
		android:ellipsize="marquee" android:maxLines="2"
		android:text="Simple application that shows how to use RelativeLayout1111111111111111"
		android:textSize="12sp" android:textColor="#03b2f3" />


	<TextView android:id="@+id/txtViewName" android:layout_width="200dp"
		android:layout_height="28dp" android:layout_alignParentTop="true"
		android:layout_above="@id/txtViewAddress" android:layout_marginLeft="15dp"
